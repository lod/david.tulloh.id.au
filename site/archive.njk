---
pagination:
  data: collections.posts
  size: 20
  reverse: true
  alias: posts
---

{% extends "default.njk" %}

{% block content %}

<h2>Post Archive</h2>

<ul>

{% for post in posts %}
<li>
<time class="post-date" datetime="{{ post.date | dateISO }}">
<a href="{{ post.url }}">
{{ post.date | dateFormat('LL') }} - {{ post.data.title }}
</a>
</time>
</li>
{% endfor %}

</ul>

<p class="pagination">
{% if pagination.href.previous %}
<a href="{{ pagination.href.previous }}" class="pagination-item">Previous</a>
{% else %}
<span class="pagination-item">Previous</span>
{% endif %} 

{% if pagination.href.next %}
<a href="{{ pagination.href.next }}" class="pagination-item">Next</a>
{% else %}
<span class="pagination-item">Next</span>
{% endif %}
</p>

{% endblock %}
